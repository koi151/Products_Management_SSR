extends ../../layouts/default.pug

block main 

  .container.my-5   
    .row.justify-content-center 
      .col-8 
        h1(class='text-center') OTP authencation 
        form(
          action='/user/password/otp'
          method='POST'
        ) 

          div(class='form-group')
            label(for='email') Email
            input(
              type='email'
              class='form-control'
              id='email'
              name='email'
              value=`${email}`
              readonly
            )
          div(class='form-group')
            label(for='otp') OTP
            input(
              type='text'
              class='form-control'
              id='otp'
              name='otp'
              required 
            )
          div(class='form-group')
            button(
              type='submit'
              class='btn btn-primary btn-block'
            ) Authencation      